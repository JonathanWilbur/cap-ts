{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "install",
            "problemMatcher": []
        },
        {
            "type": "npm",
            "script": "test",
            "problemMatcher": []
        },
        {
            "type": "npm",
            "script": "build",
            "problemMatcher": []
        },
        {
            "type": "npm",
            "script": "clean",
            "problemMatcher": []
        },
        {
            "type": "npm",
            "script": "deploy-functions",
            "problemMatcher": []
        },
        {
            "type": "npm",
            "script": "remove-functions",
            "problemMatcher": []
        },
        {
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "problemMatcher": [
                "$tsc"
            ]
        },
        {
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "option": "watch",
            "problemMatcher": [
                "$tsc-watch"
            ]
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "rm -rf ./dist && mkdir -p ./dist",
            "windows": {
                "command": "rmdir /Q /S ./dist && mkdir ./dist"
            },
            "presentation": {
                "reveal": "never",
                "panel": "shared"
            }
        },
        {
            "label": "Lint",
            "type": "shell",
            "command": "npx eslint --config .eslintrc.yml ./source/**/*.ts",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": [
                "$eslint-compact"
            ]
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "npx tsc",
            "problemMatcher": [
                "$tsc"
            ]
        },
        {
            "label": "Test",
            "type": "shell",
            "command": "npx jest --no-color",
            "problemMatcher": {
                "pattern": [
                    {
                        "regexp": "^FAIL (.*\\.test\\.js)",
                        "location": 1,
                        "file": 1
                    },
                    {
                        "regexp": "  Ã— (.*) \\(.*\\)",
                        "message": 1
                    }
                ]
            }
        },
        {
            "type": "func",
            "command": "host start",
            "problemMatcher": "$func-watch",
            "isBackground": true,
            "dependsOn": "npm build"
        },
        {
            "type": "shell",
            "label": "npm build",
            "command": "npm run build",
            "dependsOn": "npm install",
            "problemMatcher": "$tsc"
        },
        {
            "type": "shell",
            "label": "npm install",
            "command": "npm install"
        },
        {
            "type": "shell",
            "label": "npm prune",
            "command": "npm prune --production",
            "dependsOn": "npm build",
            "problemMatcher": []
        }
    ],
}
